{% extends "base.html.j2" %}

{% block css %}
    <link rel="stylesheet" href="{{url_for('static',filename='css/login.css')}}">
{% endblock %}

{% block title %}
Remove Product
{% endblock %}

{% block content %}
<div id="login_form">
    <h1>Remove Product</h1>
    <form action="{{url_for('auth.remove_product')}}" method="POST">
        {{rem_prod_form.hidden_tag()}}
        <div>
            {{rem_prod_form.name.label(class="form-label")}}
            {{rem_prod_form.name(class="form-control")}}
            {% for error in rem_prod_form.name.errors %}
                <small>{{error}}</small>
            {% endfor %}
        </div>
        <div>
            {{rem_prod_form.submit(class="btn btn-danger form-control")}}
        </div>
    </form>
</div>
{% endblock %}